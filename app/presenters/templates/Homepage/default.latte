{block content}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Cinema program</h1>
                {control program}
            {snippet progr}
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>10</th><th>11</th><th>12</th><th>13</th><th>14</th>
                            <th>15</th><th>16</th><th>17</th><th>18</th><th>19</th>
                            <th>20</th><th>21</th><th>22</th><th>23</th><th>24</th>
                        </tr>
                    </thead>
                    <tbody>
                        {foreach $program as $id => $movie}
                            <tr>
                                <td>{$movie['title']}</td>
                                {for $i = 10; $i <= 24; $i++}
                                    <td>
                                        {if isset($program[$id][$i])}
                                            <a href="" title="Odkaz na rezervační system">{$program[$id][$i]}</a>
                                        {/if}
                                    </td>
                                {/for}
                            </tr>
                        {/foreach}
                    </tbody>
                </table>
            {/snippet}
        </div>
    </div>
</div>
{/block}
{block scripts}
<script type="text/javascript">
	$('.datepicker').datepicker();

	    $("#datepicker").on('change', function(){
            $.ajax({
                method: "POST",
                url: {link changeProgram!},
                data: { time: $("#datepicker").val()}
            })
        });

</script>
{/block}
